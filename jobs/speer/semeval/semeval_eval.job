#!/bin/bash
#SBATCH --job-name=semeval_eval_speer
#SBATCH --time=6:00:00
#SBATCH --nodes=1
#SBATCH --cpus-per-task=8
#SBATCH --ntasks-per-node=1
#SBATCH --gres=gpu
#SBATCH --partition=gpu_shared
#SBATCH --mem=16G
#SBATCH --mail-type=END
#SBATCH --mail-user=ragger.jonkers@student.uva.nl

module purge
module load 2019
module load CUDA/10.1.243
module load Anaconda3/2018.12

source activate lisaenv

cp -r $HOME/speer/ $TMPDIR
cd $TMPDIR/speer

for i in 1, 2, 3 
do
    python main.py eval --config configs/speer/map/semeval2017_task10_eval.conf --model_path data/speer/models/semeval/map/run$i/
    python main.py eval --config configs/speer/mlp/semeval2017_task10_eval.conf --model_path data/speer/models/semeval/mlp/run$i/
    python main.py eval --config configs/speer/bilstm/semeval2017_task10_eval.conf --model_path data/speer/models/semeval/bilstm/run$i/
    python main.py eval --config configs/speer/transformer/semeval2017_task10_eval.conf --model_path data/speer/models/semeval/transformer/run$i/
done
cp -r * $HOME/speer/