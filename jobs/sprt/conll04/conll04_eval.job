#!/bin/bash
#SBATCH --job-name=conll04_eval_sprt
#SBATCH --time=6:00:00
#SBATCH --nodes=1
#SBATCH --cpus-per-task=8
#SBATCH --ntasks-per-node=1
#SBATCH --gres=gpu
#SBATCH --partition=gpu_shared
#SBATCH --mem=16G
#SBATCH --mail-type=END
#SBATCH --mail-user=ragger.jonkers@student.uva.nl

module purge
module load 2019
module load CUDA/10.1.243
module load Anaconda3/2018.12

source activate lisaenv

cp -r $HOME/speer/ $TMPDIR
cd $TMPDIR/speer

FRAMEWORK="sprt"

for run in 1 2 3
do
    for model in map mlp bilstm transformer
    do
        python main.py eval --config "configs/all/conll04_eval.conf" \
                            --model_type $FRAMEWORK \
                            --feature_enhancer $model \
                            --model_path "data/$FRAMEWORK/save/conll04_train_$model/run$run/" \
                            --predicted_entities_path "data/$FRAMEWORK/save/conll04_train_$model/run$run/predicted_entities.json" \
                            --log_path "data/$FRAMEWORK/log/conll04_eval_$model/run$run/"
    done
done
cp -r * $HOME/speer/